<h1>New Game</h1>
<h2><%= @letters %></h2>
<form action="/score" method="get">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag :letters, @letters %>
  <p>What is the longest word you can find?</p>
  <input type="text" name="word" placeholder="Longest word">
  <input value="Play" type="submit">
</form>
